            <div class="account-wall">
                <img class="profile-img" src="~/images/photo.jpg"
                     alt="">
                <form class="form-signin" method="post" action="/Account/Authenticate">
                    <input id="email" type="email" name="Email" class="form-control" placeholder="Email" required autofocus>
                    <input id="pass" type="password" name="password" class="form-control" placeholder="Password" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
                </form>
            </div>
            <a href="/Account/SignUp" class="text-center new-account">Create an account </a>
        </div>
