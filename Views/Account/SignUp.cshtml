<script src="~/Scripts/jquery-1.8.2.intellisense.js"></script>
<script src="~/Scripts/jquery-1.8.2.js"></script>
<script>
    $(document).ready(function () {
        $("#email_input").change(checkUser);
    });

    function checkUser() {
        $("#email_error").html("checking...");
        var Email = $("#email_input").val();
        $.getJSON("/Account/CheckAvailability?email="+Email,
            function (d) {
                //Here d contains data
                if (d == true)
                    //do something
                    $("#email_error").html("Taken...");
                else
                    //do something
                    $("#email_error").html("Available...");
        });
    }
</script>
