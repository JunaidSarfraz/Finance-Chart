<div id="signUpdiv" class="container">
    <form name="signupForm" method="post" action="/Account/SaveUser">
        <table class="navbar-center signupTbl">
            <tr>
                <td class="signupTblCaptions">Name</td>
                <td width="60%"><input name="Name" class="signupTblInp" id="Name_input" type="text" placeholder="Enter Name" /></td>
                <td id="name_error" class="errors"></td>
            </tr>
            <tr>
                <td class="signupTblCaptions">Email</td>
                <td width="60%"><input name="Email" id="email_input" class="signupTblInp" type="email" placeholder="Enter Email" /></td>
                <td id="email_error" class="errors"></td>
            </tr>
            <tr>
                <td class="signupTblCaptions">Password</td>
                <td width="60%"><input name="password" id="password_input" class="signupTblInp" type="password" placeholder="Password" /></td>
                <td id="CFrim_email_error" class="errors"></td>
            </tr>
            <tr>
                <td class="signupTblCaptions">Confirm Password</td>
                <td width="60%"><input id="CFrim_password_input" name="CFrim_password_input" class="signupTblInp" type="password" placeholder="Confirm Password" /></td>
                <td id="CFrim_email_error" class="errors"></td>
            </tr>
            <tr>
                <td class="signupTblCaptions">Gender</td>
                <td width="60%">
                    <select id="gender_value" name="gender" class="signupTblInp">
                        <option selected="selected">Male</option>
                        <option>FeMale</option>
                    </select>
                </td>
                <td id="CFrim_email_error" class="errors"></td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" class="btn btn-default signupTblsubmitBtn" value="SignUp" /></td>
            </tr>
        </table>
    </form>
</div>