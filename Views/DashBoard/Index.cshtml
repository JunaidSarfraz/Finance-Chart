@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}

@if (@Model.Count == 0)
{
    <h3>No Expenses to show</h3>
}
else
{
    <table border="1">

        <tr>
            <td>Budget Name</td>
            <td>Description</td>
            <td>Amount</td>
        </tr>
        @foreach (var x in @Model)
        {
            <tr>
                <td>@x.Budget.Name</td>
                <td>@x.Description</td>
                <td>@x.Amount</td>
            </tr>   
        }
    </table>
}