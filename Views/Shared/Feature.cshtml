<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/css/simple-sidebar.css" rel="stylesheet" />
    <link href="~/Content/css/indexPage.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-2.1.1.js"></script>
</head>

<body>
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse">
                <div class="navbar-right">
                    <a id="Login" href="/Account/Login">Login</a>
                    <a id="Account_btn" href="/Account/SignUp" class="btn btn-default navbar-btn"><font color="White"><b>FREE ACCOUNT</b></font></a>
                </div>
                <a class="navbar-brand" href="/Home/Index"><img alt="Brand" src="..."></a>
                @*<form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search">
                    </div>
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>*@
            </div>
        </div>
    </nav>

    <div class="jumbotron container-fluid" style="background-image:url(../../images/background.jpg);opacity:0.75;background-repeat:no-repeat;">
        <h2 style="color:lightsalmon;margin-left:15px;font-weight:bolder">Features / @ViewBag.Title</h2>
    </div>
    <div id="wrapper">
        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="/Home/Features">
                        Features
                    </a>
                </li>
                <li>
                    <a href="/Home/Budget">Budget</a>
                </li>
                <li>
                    <a href="/Home/Expenses">Expenses</a>
                </li>
                <li>
                    <a href="/Home/Alerts">Alerts</a>
                </li>
                <li>
                    <a href="/Home/Budget_File">Budget File</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->

        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1>@ViewBag.Title</h1>
                        @RenderBody();
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>